page {
  background-color: #f5f5f5;
}

.goods-container {
  width: 100%;
}
.goods-box {
  width: 100%;
  /* height: 100px; */
  padding-bottom: 10rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 10rpx;
}

.img-box {
  background-color: #f5f5f5;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  width: 80px;
  height: 80px;
  border-radius: 3px;
  float: left;
}

.img-box image {
  width: 80px;
  height: 80px;
  display: inline-block;
}

.goods-title {
  display: inline-block;
  font-size: 30rpx;
  margin-top: 10px;
  width: 70%;
  max-height: 85rpx;
  overflow: hidden;
  color: #333;
}

.good-money {
  font-size: 22rpx;
  color: #999;
  /* height: 65rpx;
